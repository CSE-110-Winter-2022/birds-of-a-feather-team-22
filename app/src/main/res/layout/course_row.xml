<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sessionFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="54sp"
    android:layout_marginLeft="16sp"
    android:layout_marginRight="16sp"
    android:background="@drawable/custom_ripple"
    android:clickable="true"


    android:gravity="center_vertical"
    android:onClick="onStopSelectCourseRow">

    <TextView
        android:id="@+id/session_course_name_view"
        android:layout_width="66dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="88dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textColor="@color/seafoam"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/session_course_number_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/session_course_number_view"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/seafoam"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>