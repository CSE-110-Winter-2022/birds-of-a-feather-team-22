<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id ="@+id/classes_layout">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classes_list"
        android:layout_width="346dp"
        android:layout_height="474dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="21dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/course_view"
        android:layout_width="346dp"
        android:layout_height="40dp"
        android:layout_marginTop="332dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Course"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_course"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:textColor="@color/seafoam"
        android:layout_marginTop="24dp"
        android:text="Select Session Name"
        android:textSize="32dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/enter_course"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:textColor="@color/seafoam"
        android:layout_marginTop="24dp"
        android:text="Enter Session Name"
        android:textSize="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/or"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginTop="588dp"
        android:text="OR"
        android:visibility="visible"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enter_session_button"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginTop="640dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:onClick=""
        android:shadowColor="@color/white"
        android:text="Enter Session Name"
        android:textColor="@color/seafoam"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick,TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_session_button"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginTop="640dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:onClick=""
        android:shadowColor="@color/white"
        android:text="Submit Session Name"
        android:textColor="@color/seafoam"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick,TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>