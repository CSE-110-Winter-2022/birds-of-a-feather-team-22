<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseActivity">

    <TextView
        android:id="@+id/number_text"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="297dp"
        android:text="@string/number"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_text" />

    <TextView
        android:id="@+id/subject_text"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="37dp"
        android:text="@string/subject"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/number_text"
        app:layout_constraintEnd_toStartOf="@+id/subject_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_text" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/number_view"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="17dp"
        android:hint="@string/number"
        android:textColor="#757575"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/enter_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number_text"
        app:layout_constraintTop_toBottomOf="@+id/subject_view"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:onClick="onEnterClicked"
        android:text="@string/enter"
        android:textColor="#424242"
        app:layout_constraintBottom_toTopOf="@+id/done_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_view"
        tools:ignore="OnClick,TextContrastCheck" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="177dp"
        android:onClick="onDoneClicked"
        android:text="@string/done"
        android:textColor="#424242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/enter_button"
        app:layout_constraintTop_toBottomOf="@+id/enter_button"
        tools:ignore="OnClick,TextContrastCheck" />

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="43dp"
        android:contentDescription="@string/year"
        app:layout_constraintBottom_toTopOf="@+id/quarter_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/year_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/subject_view"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="37dp"
        android:hint="@string/subject"
        android:textColor="#757575"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/number_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subject_text"
        app:layout_constraintTop_toBottomOf="@+id/quarter_spinner"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/quarter_spinner"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/quarter"
        app:layout_constraintBottom_toTopOf="@+id/subject_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quarter_text"
        app:layout_constraintTop_toBottomOf="@+id/year_spinner"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/year_text"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="122dp"
        android:layout_marginBottom="43dp"
        android:text="@string/year"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/quarter_text"
        app:layout_constraintEnd_toStartOf="@+id/year_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quarter_text"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="32dp"
        android:text="@string/quarter"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/subject_text"
        app:layout_constraintEnd_toStartOf="@+id/quarter_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_text" />


</androidx.constraintlayout.widget.ConstraintLayout>